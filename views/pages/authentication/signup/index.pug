extends ../../../index.pug

block content
  <link rel="stylesheet" href="/css/client/authentication/signup.css">
  <div id="login">
        <h3 class="text-center text-white pt-5">Signup form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/api/postRegister" method="post">
                            <h3 class="text-center text-info">Signup</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Firstname:</label><br>
                                <input type="text" name="firstname" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Lastname:</label><br>
                                <input type="text" name="lastname" id="password" class="form-control">
                            </div>  
                            <div class="form-group">
                                <label for="password" class="text-info">Email:</label><br>
                                <input type="text" name="email" id="password" class="form-control">
                            </div>  
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>  
                            <br>
                            <br>
                            <br>
                            <br>
                            <div id="register-link" class="text-right">
                                <a href="#" class="text-info">Signin</a>
                            </div>
    
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
  </div>